        $('.list-unstyled li a.link_menu, .btn_home a.link_menu').click(function () {

            var ahref = $(this).attr('href').split("#");
            var id_name = ahref[1];
            var ahrefhash = '#' + id_name;

            // remove scrollbars everywhere
            // create a new one for the opening section
            //$("#ID").getNiceScroll().remove();

            $('nav.navigation ul.list-unstyled li').removeClass('active');
            $(this).closest('li').addClass('active');
            $(".overlay_single_portfolio").css('display', 'none');
            $(".overlay_single_portfolio div.single-portfolio").css('display', 'none');
            $("#portfolio .page_content").show();

            $("#main .layers").removeClass('page_current');
            $(ahrefhash).addClass('page_current');

            if (id_name == "resume") {
                $('.skillbar').each(function () {
                    $(this).find('.skillbar-bar').width(0);
                });

                $('.skillbar').each(function () {
                    $(this).find('.skillbar-bar').animate({
                        width: $(this).attr('data-percent')
                    }, 2000);
                });
            }

            return false;

        });
    </script>
    <script>
        $(".resume").click(function () {
            $("#profile").fadeOut(300);
            $("#resume").fadeIn(300);
            $("#resume").addClass("page_current");
            $("#profile").removeClass("page_current");
            $(".profile").removeClass("active");
            $(".resume").addClass("active");
        })

        $(".profile").click(function () {
            $("#resume").fadeOut(300);
            $("#profile").fadeIn(300);
            $("#profile").addClass("page_current");
            $("#resume").removeClass("page_current");
            $(".resume").removeClass("active");
            $(".profile").addClass("active");
        })
    </script>
